<%-  include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista klientów</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th class="tr-email">E-mail</th>
                    <th>Adres</th>
                    <th>Numer telefonu</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for(let user of users) { %>
                <tr>
                    <td> <%= user.firstName %> </td>
                    <td> <%= user.lastName %> </td>
                    <td> <%= user.email %> </td>
                    <td> <%= user.address %> </td>
                    <td> <%= user.number %> </td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/user/details/<%=user._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/user/edit/<%=user._id%>" class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li>
                                <a href="/user/delete/<%=user._id%>" class="list-actions-button-delete">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% }%>
            </tbody>
        </table>
        <p><a href="/user/add" class="button-add">Dodaj nowego klienta</a></p>
    </main>
<%-  include('../../fragments/footer.ejs') %>