<%-  include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista autorów</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for(let author of authors) { %>
                <tr>
                    <td> <%= author.firstName %> </td>
                    <td> <%= author.lastName %> </td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/author/details/<%=author._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/author/edit/<%=author._id%>" class="list-actions-button-edit">Edytuj</a>

                            </li>
                            <li>
                                <a href="/author/delete/<%=author._id%>" class="list-actions-button-delete">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% }%>
            </tbody>
        </table>
        <p><a href="/author/add" class="button-add">Dodaj nowego autora</a></p>
    </main>
<%-  include('../../fragments/footer.ejs') %>