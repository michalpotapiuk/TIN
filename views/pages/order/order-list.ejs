<%-  include('../../fragments/header.ejs') %>

    <main>
        <h2>Lista zamówień</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Klient</th>
                    <th>Ksiażka</th>
                    <th>Data Zamowienia</th>
                    <th>Data wysyłki</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
            <% for(let order of orders) { %>
                <tr>
                    <td> <%= order.user.firstName.concat(' ' + order.user.lastName)%> </td>
                    <td> <%= order.book.title %> </td>
                    <td><%= order.dateOrder  %></td>
                    <td><%=  order.dataShipping%></td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                <a href="/order/details/<%=order._id%>" class="list-actions-button-details">Szczegóły</a>
                            </li>
                            <li>
                                <a href="/order/edit/<%=order._id%>" class="list-actions-button-edit">Edytuj</a>
                            </li>
                            <li>
                                <a href="/order/delete/<%=order._id%>" class="list-actions-button-delete">Usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% }%>
            </tbody>
        </table>
        <p><a href="/order/add" class="button-add">Dodaj nowe zamówienie</a></p>
    </main>
<%-  include('../../fragments/footer.ejs') %>